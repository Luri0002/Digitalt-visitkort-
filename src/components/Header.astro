---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<header x-data="{ showmenu: false }" class="bg-primary-900">
  <div id="navbar" class="container mx-auto p-4 flex flex-row justify-between items-center">
    <div id="logo" class="">
      <a href="#" class="font-display text-4xl"></a>
    </div>
    <nav id="desktopmenu" class="hidden lg:block">
      <ul class="flex flex-row gap-6">
        <li class="uppercase"><a href="/" class={currentPath === "" ? "underline" : ""}>Forside</a></li><!-- alternativt: lav et <a href="">Link</a>, hvis du ikke vil bruge Link.astro komponenten -->
        <li class="uppercase"><a href="#om" class={currentPath === "#om" ? "underline" : ""}>Om mig</a></li>
        <li class="uppercase"><a href="#kontakt" class={currentPath === "#kontakt" ? "underline" : ""}>Kontakt</a></li>
        <li class="uppercase"><a href="/komponentbibliotek/" class={currentPath === "komponentbibliotek/" ? "underline" : ""}>Komponentbibliotek</a></li>
      </ul>
    </nav>
    <button id="burgermenu" class="lg:hidden" x-on:click="showmenu = ! showmenu">Menu</button>
  </div>
  <nav id="mobilmenu" class="flex flex-col content-center" x-show="showmenu" x-transition x-on:click="showmenu = false" x-on:click.outside="showmenu = false">
    <ul class="border-t-2 border-b-2 border-secondary-900">
      <li class="text-center py-2"><a href="/" class={currentPath === "" ? "underline" : ""}>Forside</a></li>
      <li class="text-center py-2"><a href="/komponentbibliotek/" class={currentPath === "komponentbibliotek/" ? "underline" : ""}>Komponentbibliotek</a></li>
    </ul>
  </nav>
</header>
